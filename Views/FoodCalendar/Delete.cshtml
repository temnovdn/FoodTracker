@model FoodTracker.Models.ConsumedFoodViewModel
@{
    ViewData["Title"] = "Delete consumed food";
}
<h1>Delete</h1>
<h3>Are you sure you want to delete this entry?</h3>
<div>
    <h4>Consumed food</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Date)</dt>
        <dd class="col-sm-9">@Model.Date.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.FoodName)</dt>
        <dd class="col-sm-9">@Model.FoodName</dd>
        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.QuantityGrams)</dt>
        <dd class="col-sm-9">@Model.QuantityGrams</dd>
        <dt class="col-sm-3">Calories</dt>
        <dd class="col-sm-9">@Model.Calories.ToString("F1")</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" asp-route-date="@Model.Date.ToString("yyyy-MM-dd")" class="btn btn-secondary">Back to calendar</a>
    </form>
</div>
